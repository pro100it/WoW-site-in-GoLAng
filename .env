# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Server Settings
PORT=8080
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DOMAIN=wowserver.com
BASE_URL=https://wowserver.com
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60
REGISTRATION_COOLDOWN=300

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MySQL Auth Database (TrinityCore/CMangos)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_secure_password_here
DB_NAME=auth
DB_CHARSET=utf8mb4

# Character Database
DB_CHARS_HOST=localhost
DB_CHARS_PORT=3306
DB_CHARS_USER=root
DB_CHARS_PASSWORD=your_secure_password_here
DB_CHARS_NAME=characters

# World Database (optional)
DB_WORLD_HOST=localhost
DB_WORLD_PORT=3306
DB_WORLD_USER=root
DB_WORLD_PASSWORD=your_secure_password_here
DB_WORLD_NAME=world

# Database Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2

# ============================================
# GAME SERVER CONFIGURATION
# ============================================

# Server Type: 0 = TrinityCore, 5 = CMangos, 6 = AzerothCore
SERVER_CORE=0
EXPANSION=2  # 0 = Classic, 1 = TBC, 2 = WotLK, 3 = Cataclysm
REALMLIST=logon.yourserver.com
SERVER_NAME=WoW WotLK Server
SERVER_MOTD=Welcome to our WoW Server!
MAX_ACCOUNTS_PER_IP=5
ALLOW_MULTI_IP=false

# Battle.net Support (for TrinityCore 3.3.5a+)
BATTLENET_SUPPORT=false
SRP6_VERSION=0  # 0 = Standard, 1 = Bnet v1, 2 = Bnet v2

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Password Policy
PASSWORD_MIN_LEN=4
PASSWORD_MAX_LEN=16
REQUIRE_COMPLEX_PASSWORD=false
PASSWORD_HISTORY_COUNT=3

# Username Policy
USERNAME_MIN_LEN=3
USERNAME_MAX_LEN=16
ALLOW_SPECIAL_CHARS=true
SPECIAL_CHARS_ALLOWED=_-.

# Email Policy
REQUIRE_EMAIL_VERIFICATION=true
ALLOW_MULTIPLE_ACCOUNTS_PER_EMAIL=false
EMAIL_DOMAINS_BLACKLIST=tempmail.com,10minutemail.com

# Captcha Settings
ENABLE_CAPTCHA=true
CAPTCHA_PROVIDER=hcaptcha  # hcaptcha, recaptcha, turnstile
CAPTCHA_SECRET=your_hcaptcha_secret_key
CAPTCHA_SITEKEY=your_hcaptcha_site_key

# Two-Factor Authentication
ENABLE_2FA=false
2FA_PROVIDER=totp  # totp, email, sms
2FA_ISSUER=WoW Server

# ============================================
# EMAIL CONFIGURATION
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@wowserver.com
SMTP_FROM_NAME=WoW Server
SMTP_SECURE=true
EMAIL_TEMPLATE_PATH=./templates/email/

# ============================================
# CACHE CONFIGURATION
# ============================================

CACHE_ENABLED=true
CACHE_TYPE=redis  # redis, memory
CACHE_DURATION=300  # seconds
STATS_CACHE_DURATION=60
PLAYERS_CACHE_DURATION=30

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100  # MB
LOG_MAX_AGE=30    # days
LOG_MAX_BACKUPS=7
LOG_COMPRESS=true

# ============================================
# MONITORING & ANALYTICS
# ============================================

ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Discord Webhook for Registrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_REGISTRATION_NOTIFY=true
DISCORD_CHANNEL_ID=123456789

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# SOAP Service (for in-game commands)
SOAP_ENABLED=false
SOAP_HOST=localhost
SOAP_PORT=7878
SOAP_USER=admin
SOAP_PASSWORD=admin

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Theme Settings
THEME=dark  # dark, light, auto
PRIMARY_COLOR=#d4af37
SECONDARY_COLOR=#c41f3b
ACCENT_COLOR=#0078ff

# Features
ENABLE_WEBSOCKETS=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=false
ENABLE_SERVICE_WORKER=true

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
CLOUDFLARE_ANALYTICS_TOKEN=

# ============================================
# SECURITY HEADERS
# ============================================

ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_OPTIONS=true
ENABLE_FRAME_OPTIONS=true
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' https://hcaptcha.com https://*.hcaptcha.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https://hcaptcha.com https://*.hcaptcha.com"

# ============================================
# MAINTENANCE MODE
# ============================================

MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Server is under maintenance. Please check back later.
MAINTENANCE_START=
MAINTENANCE_END=

# ============================================
# DEBUGGING & DEVELOPMENT
# ============================================

DEBUG=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api/docs
ALLOW_INSECURE_REGISTRATIONS=false
SKIP_CAPTCHA_IN_DEV=true

# ============================================
# CUSTOM SETTINGS
# ============================================

# Registration Bonuses (e.g., start gold, items)
REGISTRATION_BONUS_ENABLED=false
START_GOLD=0
START_ITEMS=
START_SPELLS=

# Vote System
VOTE_SYSTEM_ENABLED=false
VOTE_SITES=
VOTE_REWARD_ITEM=
VOTE_REWARD_COUNT=1

# Referral System
REFERRAL_SYSTEM_ENABLED=false
REFERRAL_REWARD=
MAX_REFERRALS_PER_ACCOUNT=10
